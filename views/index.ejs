<% include partials/header %>
<!-- <% include partials/navbar %> -->
    <center><h4 class="display-4">Add User</h4></center>

    <% if(errors)
    {
         errors.forEach(function(error)
        { %>
            <div class="alert alert-danger" role="alert"><%= error.msg %> </div>
        <% })
    } %>

    <center>
    <div class="card" style="width: 25rem;">
        <form method="POST" action="/users/add">
            <div class="form-group" style="width: 19rem;">
                <label>First Name</label> <br />
                <input type="text" name="firstname" class="form-control">

            </div>

            <div class="form-group" style="width: 19rem;">
                <label>Last Name</label> <br />
                <input type="text" name="lastname" class="form-control">

                </div>

            <div class="form-group" style="width: 19rem;">
                <label>Email</label> <br />
                <input type="text" name="email" class="form-control">

                <small id="emailHelp" class="form-text text-muted">We'll never share your information with any 3rd parties.</small>
            <center><input type="submit" value="submit" class="btn btn-dark"></center>

        </div></form>
    </div>
</center>

    <center><h4 class="display-4"><%= title %></h4></center>
    <center><div class="card" style="width: 50rem;">
        <table class="table table-striped table-dark" id="table" >
            <thead>
                <tr>
                    <th scope="col">ID              </th>
                    <th scope="col">Firstname       </th>
                    <th scope="col">Lastname        </th>
                    <th scope="col">Email           </th>
                    <th scope="col">DELETE          </th>

                </tr>
            </thead>
             <tbody>
                 <!-- use the parsed 'accounts' (containing returned rows) and loop all, then render data -->
             <% users.forEach(function (user) { %>
                <tr>
                    <td><%= user.id          %></td>
                    <td><%= user.firstname   %></td>
                    <td><%= user.lastname    %></td>
                    <td><%= user.email       %></td>
                    <td><center><a href="#" class="deleteuser" data-id="<%= user.id %>"<span aria-hidden="true">&times;</span></a></center></td>
                </tr>
             <% }) %>
             </tbody>
        </table>
    </div></center>
<% include partials/footer %>
